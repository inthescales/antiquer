{
    "manifest_version": 3,
    "name": "Antiquer",
    "short_name": "Antiquer",
    "description": "Add diaereses and ligatures to English text.",
    "version": "2.4",
    "icons": { 
        "16": "resources/icon_16x.png",
        "48": "resources/icon_48x.png",
        "128": "resources/icon_128x.png"
    },
    "action": {
      "default_title": "Antiquer",
      "default_icon": "resources/icon_48x.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "driver.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "trie.json"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{1f27c6e1-0f65-4bdc-b3ed-22bfc96a5ec0}",
            "data_collection_permissions": {
                "required": ["none"]
            }
        }
    }
}
