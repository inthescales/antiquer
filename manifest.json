{
"manifest_version": 2,
    "name": "Diaeresizer",
    "description": "Display diaereses instead of other spelling forms.",
    "version": "1.0",
    "icons": { 
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_title": "Diaeresizer",
      "default_popup": "popup.html"
    },
    "permissions": [
      "contextMenus",
      "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "replacement.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "diaereses.json"
    ]
}